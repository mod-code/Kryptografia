WindowManager:
    WindowMenu:
    WindowMorse:
    WindowCK:


<WindowMenu>:         # Okno menu głównego
    name: "menu"

    GridLayout:
        cols:1

        Label:
            text: u"Wybierz metod\u0119\n   szyfrowania:" # "Wybierz metodę szyfrowania:"
            font_size: 60

        GridLayout:
            cols:2
            spacing: 5
            padding: 10

            Button:
                text:"Szyfrowanie Morsem"
                on_release:
                    app.root.current = "win_morse"
                    root.manager.transition.direction = "left"

            Button:
                text:"Szyfrowanie RSA"
                on_release:
                    app.root.current = "win_morse"
                    root.manager.transition.direction = "left"

            Button:
                text:"Szyfrowanie Cezara - Klasyczne"
                on_release:
                    app.root.current = "win_ck"
                    root.manager.transition.direction = "left"

            Button:
                text:"Szyfrowanie Cezara - Liczbowe"
                on_release:
                    app.root.current = "win_ck"
                    root.manager.transition.direction = "left"

            Button:
                text:"Szyfrowanie Y"
                on_release:
                    app.root.current = "win_morse"
                    root.manager.transition.direction = "left"

            Button:
                text:"Szyfrowanie Z"
                on_release:
                    app.root.current = "win_morse"
                    root.manager.transition.direction = "left"

        Label:
            #text: "Projekt 2020 - Programowanie Obiektowe II\nPolitechnika Krakowska\n\n Michał Odrzywołek, Wojciech Strzeboński"
            text: u"Projekt 2020 - Programowanie Obiektowe II\nPolitechnika Krakowska\n\n Micha\u0142 Odrzywo\u0142ek, Wojciech Strzebo\u0144ski"


# OKNO: SZYFR MORSE

<WindowMorse>:
    name: "win_morse"

    c_input: c_input
    c_output: c_output
    err_msg: err_msg

    GridLayout:
        cols:1
        size: root.width, root.height
        pos: 0, 0

        GridLayout:
            cols:2
            Label:
                text: "Tekst nieszyfrowany: "
            TextInput:
                id: c_input
                multinline: True

        GridLayout:
            cols:2
            Label:
                text: "Tekst zaszyfrowany: "
            TextInput:
                id: c_output
                multiline: True

        GridLayout:
            cols:1
            Label:
                id: err_msg
                color: 1, 0.1, 0.1, 1
                text:""

            GridLayout:
                cols:2
                Button:
                    text: "Szyfruj"
                    on_press:
                        root.btn_input()
                Button:
                    text: "Deszyfruj"
                    on_press:
                        root.btn_output()

            Button:
                text: "<<< Menu"
                on_release:
                    app.root.current = "menu"
                    root.manager.transition.direction = "right"

            Label:
                text:"Szyfrowanie Morsem"


# OKNO: SZYFR CEZARA - KLASYCZNE

<WindowCK>:
    name: "win_ck"

    c_input: c_input
    c_output: c_output
    key: key

    GridLayout:
        cols:1
        size: root.width, root.height
        pos: 0, 0

        GridLayout:
            cols:2
            Label:
                text: "Tekst nieszyfrowany: "
            TextInput:
                id: c_input
                multinline: True

        GridLayout:
            cols:2
            Label:
                text: "Tekst zaszyfrowany: "
            TextInput:
                id: c_output
                multiline: True

        GridLayout:
            cols:1
            GridLayout:
                cols:2

                Label:
                    text: ""

                GridLayout:
                    cols:4
                    Label:
                        text: ""
                    GridLayout:
                        cols:1
                        Label:
                            text: "KLUCZ:"
                        Button:
                            text: "Generuj"
                            on_press:
                                root.btn_genkey()
                    TextInput:
                        multiline: False
                        id: key
                        font_size:20
                        halign: 'center'
                        valign: 'middle'
                        background_color: 0.4,0.9,0.5,1
                    Label:
                        text: ""


            GridLayout:
                cols:2

                Button:
                    text: "Szyfruj"
                    on_press:
                        root.btn_input()
                Button:
                    text: "Deszyfruj"
                    on_press:
                        root.btn_output()

            Button:
                text: "<<< Menu"
                on_release:
                    app.root.current = "menu"
                    root.manager.transition.direction = "right"

            Label:
                text:"Szyfrowanie Cezara - Klasyczne"

